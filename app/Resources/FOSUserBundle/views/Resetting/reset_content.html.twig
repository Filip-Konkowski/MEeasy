{% trans_default_domain 'FOSUserBundle' %}

<h2>{{ 'resetting.new_password_form_title'|trans }}</h2>
<form class="form-horizontal" role="form" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
    <div class="form-group">
        {{ form_row(form.plainPassword.first) }}
        {{ form_row(form.plainPassword.second) }}
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">{{ 'resetting.reset.submit'|trans }}</button>
        </div>
    </div>

    {{ form_rest(form) }}
</form>
